{
  "manifest_version": 2,
  "name": "Vocabulary Helper Extension",
  "version": "0.1.0",
  "description": "Capture selected words, query definitions via Definer and record into Notion after delay.",
  "browser_specific_settings": {
    "gecko": {
      "id": "vocabulary-helper@stilinpek",
      "data_collection_permissions": {
        "required": ["authenticationInfo", "websiteContent", "browsingActivity"],
        "optional": []
      }
    }
  },
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "https://api.notion.com/*",
    "https://lumetrium.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
